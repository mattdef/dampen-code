{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Dampen",
  "scopeName": "source.dampen",
  "fileTypes": [".dampen"],
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#cdata"
    },
    {
      "include": "#doctype"
    },
    {
      "include": "#tag"
    },
    {
      "include": "#binding"
    }
  ],
  "repository": {
    "comment": {
      "begin": "<!--",
      "end": "-->",
      "name": "comment.block.xml"
    },
    "cdata": {
      "begin": "<!\\[CDATA\\[",
      "end": "\\]\\]>",
      "name": "string.unquoted.cdata.xml"
    },
    "doctype": {
      "match": "<!DOCTYPE[^>]*>",
      "name": "meta.tag.doctype.xml"
    },
    "tag": {
      "begin": "(<)(/?)([a-zA-Z_][a-zA-Z0-9_-]*)",
      "end": "(/?>)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.xml"
        },
        "2": {
          "name": "punctuation.definition.tag.slash.xml"
        },
        "3": {
          "name": "entity.name.tag.dampen"
        }
      },
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.xml"
        }
      },
      "name": "meta.tag.xml",
      "patterns": [
        {
          "include": "#attribute"
        }
      ]
    },
    "attribute": {
      "patterns": [
        {
          "include": "#state-attribute"
        },
        {
          "include": "#responsive-attribute"
        },
        {
          "include": "#standard-attribute"
        }
      ]
    },
    "state-attribute": {
      "match": "(hover|focus|active|disabled):([a-zA-Z_][a-zA-Z0-9_-]*)(=)",
      "captures": {
        "1": {
          "name": "keyword.other.state.dampen"
        },
        "2": {
          "name": "entity.other.attribute-name.xml"
        },
        "3": {
          "name": "punctuation.separator.key-value.xml"
        }
      }
    },
    "responsive-attribute": {
      "match": "(mobile|tablet|desktop):([a-zA-Z_][a-zA-Z0-9_-]*)(=)",
      "captures": {
        "1": {
          "name": "keyword.other.responsive.dampen"
        },
        "2": {
          "name": "entity.other.attribute-name.xml"
        },
        "3": {
          "name": "punctuation.separator.key-value.xml"
        }
      }
    },
    "standard-attribute": {
      "match": "([a-zA-Z_][a-zA-Z0-9_-]*)(=)",
      "captures": {
        "1": {
          "name": "entity.other.attribute-name.xml"
        },
        "2": {
          "name": "punctuation.separator.key-value.xml"
        }
      }
    },
    "binding": {
      "match": "\\{[^{}]*\\}",
      "name": "variable.other.binding.dampen"
    }
  }
}
